<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_list_height"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/md_keylines_half"
    android:layout_marginLeft="@dimen/md_keylines"
    android:layout_marginRight="@dimen/md_keylines"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/card_image"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginLeft="@dimen/md_keylines_half"
            android:layout_marginTop="@dimen/md_keylines_half"
            android:layout_marginBottom="@dimen/md_keylines_half"
            android:layout_marginRight="@dimen/md_keylines_half"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/card_image"
            android:layout_toRightOf="@+id/card_image"
            android:text="Card Title"
            android:textColor="@color/text_primary"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/card_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_title"
            android:layout_toRightOf="@+id/card_image"
            android:text="Card description"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/article_subheading" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
